{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@parser/*": ["src/parser/*"],
      "@diff/*": ["src/diff/*"],
      "@api/*": ["src/api/*"]
    },
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "tests"]
}